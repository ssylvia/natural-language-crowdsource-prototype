#geocoder-wrapper
  position fixed
  display none
  top 30%
  left: 50%
  margin-left -355px
  border-radius 25px
  overflow hidden
  z-index: 100

  .geocoder-form
    position relative
    padding 25px
    z-index 1

    input
      width 600px
      margin-top 15px
      border-radius 5px
      border none
      padding 5px

  .background
    position absolute
    top 0
    width 100%
    height 100%
    background-color white
    opacity 0.7

  #search-button
    background-color $mapMatch
    color $secondaryAccent
    padding 5px
    border-radius 5px
    display inline-block
    cursor pointer

  #search-button:hover
    background-color $topButtonHover

  .error-text
    display none
    margin-top 15px
    color $error
    width: 600px
    font-size: 17px
    font-weight: normal

#map
  position fixed
  height 100%
  width 100%
  top 0

  .leaflet-popup-close-button{
    display: none;
  }

#map.navigation-disabled
  cursor default

.leaflet-popup-content-wrapper, .leaflet-popup-tip

  h3
    font-size 15px
    font-weight normal !important

  p,a
    font-size 13px

  p
    margin-bottom 0

a[style]
  display none
